@page "/sifre-degistir"
@model ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center my-5">
    <div class="col-md-4">
        <partial name="_StatusMessage" for="StatusMessage" />
        <div class="card">
            <div class="card-header bg-first text-white py-3 d-flex align-items-center">
                <h4 class="fw-bolder mt-2">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">



                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>


                    <div class="col mb-3 position-relative">
                        <label asp-for="Input.OldPassword" class="fw-bolder mb-2 fs-14-px">Şifre</label>
                        <div class="input-group">
                            <input asp-for="Input.OldPassword" id="password" class="form-control" autocomplete="input-oldPassword" placeholder="Şifre" />
                            <span class="input-group-text bg-transparent" id="toggle-password" style="cursor:pointer;">
                                <i class='bx bx-hide' id="toggle-icon-password"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.OldPassword" class="text-danger fs-12-px"></span>
                    </div>

                    <div class="col mb-3 position-relative">
                        <label asp-for="Input.NewPassword" class="fw-bolder mb-2 fs-14-px">Yeni Şifre</label>
                        <div class="input-group">
                            <input asp-for="Input.NewPassword" id="new-password" class="form-control" autocomplete="input-newPassword" placeholder="Yeni şifre" />
                            <span class="input-group-text bg-transparent" id="toggle-new-password" style="cursor:pointer;">
                                <i class='bx bx-hide' id="toggle-icon-new-password"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="text-danger fs-12-px"></span>
                    </div>

                    <div class="col mb-3 position-relative">
                        <label asp-for="Input.ConfirmPassword" class="fw-bolder mb-2 fs-14-px">Yeni Şifre Tekrar</label>
                        <div class="input-group">
                            <input asp-for="Input.ConfirmPassword" id="confirm-password" class="form-control" autocomplete="input-confirmPassword" placeholder="Yeni Şifre Tekrar" />
                            <span class="input-group-text bg-transparent" id="toggle-confirm-password" style="cursor:pointer;">
                                <i class='bx bx-hide' id="toggle-icon-confirm-password"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger fs-12-px"></span>
                    </div>

                  
                    <button type="submit" class="w-100 btn auth-button-bg text-white">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!--show password-->
    <!--show password function-->
    <script>
        $('#toggle-password').on('click', function () {
            const input = $('#password');
            const icon = $('#toggle-icon-password');
            const type = input.attr('type') === 'password' ? 'text' : 'password';
            input.attr('type', type);
            icon.toggleClass('bx-show bx-hide');
        });

        $('#toggle-new-password').on('click', function () {
            const input = $('#new-password');
            const icon = $('#toggle-icon-new-password');
            const type = input.attr('type') === 'password' ? 'text' : 'password';
            input.attr('type', type);
            icon.toggleClass('bx-show bx-hide');
        });

        $('#toggle-confirm-password').on('click', function () {
            const input = $('#confirm-password');
            const icon = $('#toggle-icon-confirm-password');
            const type = input.attr('type') === 'password' ? 'text' : 'password';
            input.attr('type', type);
            icon.toggleClass('bx-show bx-hide');
        });
    </script>
}
