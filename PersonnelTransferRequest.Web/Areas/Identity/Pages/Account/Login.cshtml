@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<html lang="tr"
      class="light-style customizer-hide"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <link rel="icon" type="image/png" href="~/images/uyap-logo.png">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <!-- Content -->
  
    <div class="login">
        <div class="row  h-100">
            <div class="col-md-7 d-flex align-items-center justify-content-center">
                <section class="w-50">
                    <div class="my-4 d-block d-md-none justify-content-center text-center">
                        <img class="img-fluid" width="100" src="~/images/uyap-logo.png" />
                        <p class="text-dark fw-bolder mb-3 fs-5">
                            Personel Tayin Sistemine

                        </p>

                    </div>

                    <div class="text-center">
                        <h2>Hoşgeldiniz 👋</h2>
                        <h4>@ViewData["Title"]</h4>
                    </div>
                    <div class="mb-3 text-center">
                        <span class="small text-muted">Lütfen Kullanıcı Bilgilerinizi Giriniz!</span>
                    </div>
                    <form id="account" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Input.RegistrationNumber" class="fw-bolder mb-2">Sicil Numaranız</label>
                            <input asp-for="Input.RegistrationNumber" class="form-control" autocomplete="username" aria-required="true" placeholder="Sicil No" />

                            <span asp-validation-for="Input.RegistrationNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="fw-bolder mb-2">Şifre</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Şifre" />

                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Beni Hatırla
                            </label>
                        </div>
                        <div class="mb-3">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg login-button-bg text-white">Giriş yap</button>
                        </div>
                        <div class="d-flex justify-content-end">
                            <a class="text-muted" id="forgot-password" asp-page="./ForgotPassword">
                                <small>Şifremi Unuttum?</small>
                            </a>
                        </div>

                        <div class="my-4 d-block d-md-none justify-content-center text-center">
                            <a class="btn btn-outline-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Kayıt ol</a>
                        </div>
                    </form>
                </section>
            </div>
            <div class="col-md-5 d-none d-md-block">
                <div class="login-right custom-box-shadow">
                    <div class="mb-4">
                        <img class="img-fluid" width="200" src="~/images/uyap-logo.png" />

                        
                    </div>
                    <p class="text-white mb-3 fs-4">
                        Personel Tayin Sistemine
                      
                    </p>
                    <p class="text-white fs-3">
                        Hoşgeldiniz!
                    </p>
                    <div>
                        <a class="btn btn-outline-light" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Kayıt ol</a>
                    </div>
                </div>
           
            </div>

        </div>


    </div>
   
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>

