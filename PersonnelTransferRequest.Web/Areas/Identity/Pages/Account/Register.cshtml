@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<html lang="tr"
      class="light-style customizer-hide"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <link rel="icon" type="image/png" href="~/images/uyap-logo.png">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <!-- Content -->

    <div class="login">
        <div class="row  h-100">
            <div class="col-md-5 d-none d-md-block">
                <div class="login-right custom-box-shadow">
                    <div class="mb-4">
                        <img class="img-fluid" width="200" src="~/images/uyap-logo.png" />


                    </div>
                    <p class="text-white mb-3 fs-4">
                        Personel Tayin Sistemine

                    </p>
                    <p class="text-white fs-3">
                        Hoşgeldiniz!
                    </p>
                    <div>
                        <a class="btn btn-outline-light" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Giriş Yap</a>
                    </div>
                </div>

            </div>


            <div class="col-md-7 d-flex align-items-center justify-content-center">
                <section class="px-5">
                    <div class="my-4 d-block d-md-none justify-content-center text-center">
                        <img class="img-fluid" width="100" src="~/images/uyap-logo.png" />
                        <p class="text-dark fw-bolder mb-3 fs-5">
                            Personel Tayin Sistemine
                        </p>
                    </div>

                    <div class="text-center">
                        <h2>Hoşgeldiniz 👋</h2>
                        <h4>@ViewData["Title"]</h4>
                    </div>
                    <div class="mb-3 text-center">
                        <span class="small text-muted">Lütfen bilgilerin doğruluğundan emin olunuz!</span>
                    </div>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                     
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="row row-cols-1 row-cols-md-2">
                            <div class="col mb-3">
                                <label asp-for="Input.RegistrationNumber" class="fw-bolder mb-2">Sicil No</label>
                                <input asp-for="Input.RegistrationNumber" class="form-control" placeholder="Sicil No" />

                                <span asp-validation-for="Input.RegistrationNumber" class="text-danger"></span>
                            </div>

                            <div class="col mb-3">
                                <label asp-for="Input.Title" class="fw-bolder mb-2">Unvan</label>

                                <select asp-for="Input.Title" asp-items="@ViewData["Titles"] as SelectList" class="form-select">
                                    <option value="">Unvan Seçiniz</option>
                                </select>

                                <span asp-validation-for="Input.Title" class="text-danger"></span>
                            </div>

                            <div class="col mb-3">
                                <label asp-for="Input.Name" class="fw-bolder mb-2">İsim</label>

                                <input asp-for="Input.Name" class="form-control" placeholder="İsim" />

                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>

                            <div class="col mb-3">
                                <label asp-for="Input.Surname" class="fw-bolder mb-2">Soyisim</label>

                                <input asp-for="Input.Surname" class="form-control" placeholder="Soyisim" />

                                <span asp-validation-for="Input.Surname" class="text-danger"></span>
                            </div>

                            <div class="col mb-3">
                                <label asp-for="Input.TCKN" class="fw-bolder mb-2">TC Kimlik No</label>
                                <input asp-for="Input.TCKN" class="form-control" placeholder="TC Kimlik No" />

                                <span asp-validation-for="Input.TCKN" class="text-danger"></span>
                            </div>

                            <div class="col mb-3">
                                <label asp-for="Input.GSM" class="fw-bolder mb-2">Telefon Numarası</label>
                                <input asp-for="Input.GSM" class="form-control" placeholder="Telefon Numarası" />

                                <span asp-validation-for="Input.GSM" class="text-danger"></span>
                            </div>

                            <div class="col mb-3">
                                <label asp-for="Input.DutyStation" class="fw-bolder mb-2">Görev Yeri</label>

                                <select asp-for="Input.DutyStation" class="form-select citiesSelect">
                                    <!--option come from cities.js-->
                                </select>


                                <span asp-validation-for="Input.DutyStation" class="text-danger"></span>
                            </div>

                            <div class="col mb-3">
                                <label asp-for="Input.Email" class="fw-bolder mb-2">Email (Şifre işlemleri için gerekli)</label>

                                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="col mb-3">
                                <label asp-for="Input.Password" class="fw-bolder mb-2">Şifre</label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Şifre" />

                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="col mb-3">
                                <label asp-for="Input.ConfirmPassword" class="fw-bolder mb-2">Şifreyi Tekrar</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Şifreyi Onayla" />

                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="col mb-3">
                                <label asp-for="Input.ProfilPhotoFile" class="fw-bolder mb-2">Profile Fotoğrafı</label>
                                <input asp-for="Input.ProfilPhotoFile" type="file" class="form-control" />
                                <span asp-validation-for="Input.ProfilPhotoFile" class="text-danger fs-tiny"></span>
                            </div>

                        </div>
                    

                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Kayıt Ol</button>
                    </form>
                </section>
            </div>



        </div>


    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--cities-->
    <script src="~/js/cities.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <!--Select2-->
        <script>
            $(document).ready(function () {
                const $select = $('.citiesSelect');
                $select.empty(); // önce içeriği temizle
                citiesArray.forEach(city => {
                    $select.append(new Option(city === "" ? "İl Seçiniz" : city, city));
                });

                $select.select2();
            });
        </script>
    }


</body>
</html>

