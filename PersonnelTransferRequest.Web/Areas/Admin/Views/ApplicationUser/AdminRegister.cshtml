@model AdminRegisterViewModel
@{
    ViewData["Title"] = "Admin Kayıt";
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr"
 class="light-style customizer-hide"
 dir="ltr"
 data-theme="theme-default"
 data-assets-path="~/adminAssets/"
 data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>@ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/adminAssets/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />

    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="~/adminAssets/vendor/fonts/boxicons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/adminAssets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/adminAssets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/adminAssets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/adminAssets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <!-- Page CSS -->
    <!-- Page -->
    <link rel="stylesheet" href="~/adminAssets/vendor/css/pages/page-auth.css" />
    <!-- Helpers -->
    <script src="~/adminAssets/vendor/js/helpers.js"></script>

    <script src="~/adminAssets/js/config.js"></script>

</head>
<body>
    <!-- Content -->

    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y">
            <div class="authentication-inner">
                <!-- Register Card -->
                <div class="card">
                    <div class="card-body">
                        <!-- Logo -->
                        <div class="app-brand justify-content-center">
                            <a href="#" class="app-brand-link gap-2">
                                <div>
                                    <img class="img-fluid" width="80" src="~/images/uyap-logo.png" />
                                </div>
                            </a>
                        </div>
                        <!-- /Logo -->
                        <h4 class="mb-2">Admin Kayıt 🚀</h4>
                        <p class="mb-2">Admin kayıta hoşgeldiniz! </p>
                        <p class="mb-4 fs-tiny text-danger">Buradan sadece admin kaydı oluşup başka kayıt oluşmayacaktır! </p>

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                    <form asp-route="adminRegister" method="post" class="my-4">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>


                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input class="form-control" asp-for="Email" placeholder="Gerçek mail adresi" />
                            <span asp-validation-for="Email" class="text-danger fs-tiny"></span>
                        </div>

                        <div class="mb-3 form-password-toggle">
                            <label class="form-label" asp-for="Password">Şifre</label>
                            <div class="input-group input-group-merge">
                                <input asp-for="Password"
                                       class="form-control"
                                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                       aria-describedby="password" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>

                            <span asp-validation-for="Password" class="text-danger fs-tiny"></span>
                        </div>

                        <div class="mb-3 form-password-toggle">
                            <label class="form-label" asp-for="ConfirmPassword">Şifre Tekrar</label>
                            <div class="input-group input-group-merge">
                                <input asp-for="ConfirmPassword"
                                       class="form-control"
                                       placeholder="••••••••••"
                                       type="password"
                                       id="confirmPassword" />
                                <span class="input-group-text cursor-pointer" id="toggleConfirmPassword">
                                    <i class="bx bx-hide"></i>
                                </span>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger fs-tiny"></span>
                        </div>



                        <button type="submit" class="btn btn-primary  d-grid w-100 mb-3">Kaydol</button>
                        <a asp-action="AdminLogin" class="btn btn-secondary  d-grid w-100">Giriş Yap</a>
                    </form>




                    </div>
                </div>
                <!-- Register Card -->
            </div>
        </div>
    </div>

    <!-- / Content -->
    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <script src="~/adminAssets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/adminAssets/vendor/libs/popper/popper.js"></script>
    <script src="~/adminAssets/vendor/js/bootstrap.js"></script>
    <script src="~/adminAssets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

    <script src="~/adminAssets/vendor/js/menu.js"></script>
    <!-- endbuild -->
    <!-- Vendors JS -->
    <!-- Main JS -->
    <script src="~/adminAssets/js/main.js"></script>

    <!--confirm password show password-->
    <script>
        $(document).ready(function () {
            $('#toggleConfirmPassword').on('click', function () {
                var input = $('#ConfirmPassword');
                var icon = $(this).find('i');

                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('bx-hide').addClass('bx-show');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('bx-show').addClass('bx-hide');
                }
            });
        });
    </script>


    <partial name="_ValidationScriptsPartial" />
</body>
</html>
